        <Button
            android:id="@+id/home_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:background="@color/invisible"
            android:text="Trang chủ"
            android:textStyle="bold"
            android:padding="0dp"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:drawableTop="@drawable/baseline_home">
        </Button>

        <Button
            android:id="@+id/thu_nhap_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:background="@color/invisible"
            android:text="Thu nhập"
            android:textStyle="bold"
            android:padding="0dp"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:drawableTop="@drawable/baseline_attach_money">

        </Button>
        <Button
            android:id="@+id/hop_thu_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:background="@color/invisible"
            android:text="Hộp thư"
            android:textStyle="bold"
            android:padding="0dp"
            android:textSize="17dp"
            android:textColor="@color/black"
            android:drawableTop="@drawable/baseline_mail_emty">

        </Button>
    </LinearLayout>

</LinearLayout>