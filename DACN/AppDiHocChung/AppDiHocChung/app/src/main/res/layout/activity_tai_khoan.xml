<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TaiKhoanActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thông tin tài khoản"
            android:textSize="30sp"
            android:layout_marginTop="20sp"/>

        <ImageView
            android:layout_width="70sp"
            android:layout_height="70sp"
            android:layout_marginTop="20sp"
            android:src="@drawable/ic_face"
            android:onClick="doiAvatar"
            android:id="@+id/Avatar"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tài khoản ở đây"
            android:textSize="30sp"
            android:layout_marginTop="20sp"
            android:id="@+id/TaiKhoan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tên ở đây"
            android:textSize="30sp"
            android:layout_marginTop="20sp"
            android:id="@+id/Ten"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SDT đây"
            android:textSize="30sp"
            android:layout_marginTop="20sp"
            android:id="@+id/Sdt"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Địa chỉ:"
            android:textSize="30sp"
            android:layout_marginTop="20sp"
            android:id="@+id/DiaChi"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng kí làm tài xế"
            android:textSize="30sp"
            android:layout_marginTop="20sp"
            android:textColor="@color/white"
            android:backgroundTint="@color/black"
            android:onClick="dangKyTaiXe"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/bottom_panel"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="quaTrangChu">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:src="@drawable/ic_house"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:text="Trang chủ"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="quaTrangHoatDong">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:src="@drawable/ic_list"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:text="Hoạt động"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="quaTrangThanhToan">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:src="@drawable/ic_wallet"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:text="Thanh toán"
                android:textSize="12sp"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dip"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:onClick="quaTrangTaiKhoan">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:src="@drawable/ic_face"
                android:layout_centerInParent="true"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30sp"
                android:text="Tài khoản"
                android:textSize="12sp"/>
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>